<Window x:Class="WpfApp6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Grid.Row="1">
        <TextBlock Text="{Binding Path=pos, Mode=TwoWay}" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="20" > </TextBlock>
        <Slider x:Name="slide01" Minimum="0" Maximum="100"></Slider>
           
        </StackPanel>
        <Button Content="Button" HorizontalAlignment="Left" Height="34" Margin="168,224,0,161" Width="44" RenderTransformOrigin="2.511,3.64" Click="Button_Click"/>
    </Grid>
</Window>
